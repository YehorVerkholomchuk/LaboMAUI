<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuiz.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
            <Label x:Name="ScoreLabel"
                   Text="Punteggio: 0"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="BlueViolet" />
            <VerticalStackLayout Spacing="15">
                <Label Text="DOMANDA" 
                       FontSize="12"
                       HorizontalOptions="Center"
                       TextColor="Gray" />

                <Label x:Name="QuestionTextLabel"
                       Text="Caricamento domanda..."
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black" />
            </VerticalStackLayout>
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button x:Name="TrueButton"
                        Text="VERO"
                        Clicked="OnAnswerClicked"
                        CommandParameter="true"
                        WidthRequest="130"
                        HeightRequest="60"
                        FontSize="18"
                        BackgroundColor="#27ae60"
                        CornerRadius="10" />

                <Button x:Name="FalseButton"
                        Text="Falso"
                        Clicked="OnAnswerClicked"
                        CommandParameter="false"
                        WidthRequest="130"
                        HeightRequest="60"
                        FontSize="18"
                        BackgroundColor="#c0392b"
                        CornerRadius="10" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
