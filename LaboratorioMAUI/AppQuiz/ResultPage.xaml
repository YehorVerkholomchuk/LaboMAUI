<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuiz.ResultPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
            <Label x:Name="EndLabel"
                   Text="QUIZ COMPLETATO!"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="BlueViolet" />
            <VerticalStackLayout Spacing="15">
                <Label Text="Il tuo punteggio" 
                       FontSize="12"
                       HorizontalOptions="Center"
                       TextColor="Gray" />

                <Label x:Name="ScoreLabel"
                       Text="0"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="BlueViolet" />
            </VerticalStackLayout>
            <Label x:Name="BestScoreLabel"
                   Text="Miglior Punteggio: 0"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="Goldenrod" />
            <Button x:Name="ReplayButton"
                    Text="Gioca ancora"
                    Clicked="OnReplayClicked"
                    WidthRequest="300"
                    HeightRequest="60"
                    FontSize="18"
                    BackgroundColor="BlueViolet"
                    CornerRadius="10" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
