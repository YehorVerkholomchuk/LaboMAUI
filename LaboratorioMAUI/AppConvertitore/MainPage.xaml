<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConvertitore.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center">

            <Label Text="Converter CHF - EUR"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />
            <Entry x:Name="entConvertion"
                   Placeholder="Insert value in CHF"
                   Keyboard="Numeric"/>
            <Button x:Name="btnConvert"
                    Text="Convert to EUR"
                    TextColor="White"
                    BackgroundColor="DodgerBlue"
                    Clicked="btnConvert_Clicked"/>
            <Label x:Name="lblResult"
                   Text="Result: "
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
            <Button x:Name="btnReset"
                    Text="Reset"
                    TextColor="White"
                    BackgroundColor="IndianRed"
                    Clicked="btnReset_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
